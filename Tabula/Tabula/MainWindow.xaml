<Window x:Class="Tabula.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tabula"
        mc:Ignorable="d"
        Title="MainWindow" Height="540" Width="333" 
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="CanResizeWithGrip">
    <Grid>
        <Canvas x:Name="canvas1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Canvas.Background>
                <ImageBrush ImageSource="32.png" Stretch="Uniform"/>
            </Canvas.Background>
            <TextBlock x:Name="textBlock" TextWrapping="Wrap" Text="A Savaşı" Canvas.Top="29" Foreground="White" FontSize="48" TextAlignment="Center" Width="325"/>
            <TextBlock x:Name="textBlock_Copy"  TextWrapping="Wrap" Text="B Sultan" Canvas.Top="143" Foreground="White" FontSize="36" TextAlignment="Center" Width="325"/>
        </Canvas>

    </Grid>
</Window>
